{
  "manifest_version": 3,
  "name": "Countify",
  "description": "Count words and characters on any webpage or selected text.",
  "version": "1.0.1",
  "permissions": ["activeTab", "clipboardRead"],
  "host_permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
